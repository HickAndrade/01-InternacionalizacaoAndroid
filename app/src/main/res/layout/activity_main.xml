<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/helloWorldLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/country"
        android:layout_width="@dimen/txt_textView"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:contentDescription="@string/country"
        android:gravity="center"
        android:text="@string/country"
        android:textSize="@dimen/country_textSize"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/flag"
        android:layout_width="@dimen/image_size"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@drawable/flag"
        app:srcCompat="@drawable/flag" />


    <ImageView
        android:id="@+id/foodImage"
        android:layout_width="@dimen/image_size"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:adjustViewBounds="false"
        android:contentDescription="@drawable/food"
        app:srcCompat="@drawable/food" />


    <TextView
        android:id="@+id/food"
        android:layout_width="@dimen/txt_textView"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:contentDescription="@string/food"
        android:gravity="center"
        android:text="@string/food"
        android:textSize="@dimen/food_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
